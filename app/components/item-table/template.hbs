<div class="container">
    <form class="form-inline m-b-md">
        <div class="form-group">
            <div class="input-group">
                {{input class="form-control" value=searchInput placeholder="Ex: \"Lorem\""}}
            </div>
            <div {{action 'search'}} class="btn btn-default">Search Items</div>
        </div>
    </form>
    <table class="coll-table m-b-md">
        <thead style="{{theadStyle}}">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Type</th>
        </tr>
        </thead>
        <tbody>
        {{#each searchResults.data as |r|}}
            <tr>
                <td>{{#link-to "collections.collection.item"
                               model.id r.id}}{{r.attributes.title}}{{/link-to}}</td>
                <td>{{r.attributes.created-by}}</td>
                <td>{{r.attributes.category}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    <div class="pagination-wrapper text-center m-b-md">
        <div class="btn btn-default" {{action 'prevPage'}}> prev</div>
        <div class="btn btn-default" {{action 'nextPage'}}> next</div>
    </div>
</div>
