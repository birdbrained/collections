<div class="hero">
    <h1>{{collection.title}} Submissions</h1>
</div>

<section class="info">
    In progress submissions to the {{collection.title}}. Any of the submissions may be continued by pressing the continue button.
</section>

<section class="toolbar">
    <button class="button pull-right" {{action "newCase" collection}}>
        Start a new submission
    </button>
</section>

{{#each cases as |case|}}
    <section>
        <span class="case-id">{{case.id}}</span>
        <h2>{{case.workflow.title}}</h2>
        <div class="content">
            <button class="btn btn-danger" {{action "continueCase" case collection}}>
                Discard
            </button>
            <button class="btn btn-success" {{action "continueCase" case collection}}>
                Continue
            </button>

        </div>

    </section>
{{else}}
    <section>

        <div class="label">
            You have not started any submissions to {{collection.title}}
        </div>

    </section>
{{/each}}

